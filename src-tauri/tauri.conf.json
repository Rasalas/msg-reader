{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "msgReader",
  "version": "../package.json",
  "identifier": "com.rasalas.msgreader",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "msgReader",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "fileAssociations": [
      {
        "ext": ["msg"],
        "name": "Outlook Email",
        "description": "Microsoft Outlook Message",
        "role": "Editor",
        "mimeType": "application/vnd.ms-outlook"
      },
      {
        "ext": ["eml"],
        "name": "Email Message",
        "description": "Email Message File",
        "role": "Editor",
        "mimeType": "message/rfc822"
      }
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Rasalas/msg-reader/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBNEFGMkEyODRDM0E4MDEKUldRQnFNT0VvdkpLNnVmK3FScU85VGxWTFRsMWh5MHNMTUFTUFI4Mmt3UjhocDVUUTFxRmZiQkcK"
    }
  }
}
